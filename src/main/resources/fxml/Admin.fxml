<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Admin Panel" textAlignment="LEFT">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="testDBButton" text="Test DB Connection" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      
      <Separator />
      
      <TabPane VBox.vgrow="ALWAYS">
         <tabs>
            <Tab text="Products">
               <content>
                  <VBox spacing="10">
                     <children>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                           <children>
                              <Button fx:id="addProductBtn" text="Add Product" />
                              <Button fx:id="editProductBtn" text="Edit Product" />
                              <Button fx:id="deleteProductBtn" text="Delete Product" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        
                        <TableView fx:id="adminProductTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn text="ID" prefWidth="50" />
                              <TableColumn text="Name" prefWidth="200" />
                              <TableColumn text="Price" prefWidth="100" />
                              <TableColumn text="Category" prefWidth="150" />
                              <TableColumn text="Stock" prefWidth="100" />
                           </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            
            <Tab text="Categories">
               <content>
                  <VBox spacing="10">
                     <children>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                           <children>
                              <Button fx:id="addCategoryBtn" text="Add Category" />
                              <Button fx:id="editCategoryBtn" text="Edit Category" />
                              <Button fx:id="deleteCategoryBtn" text="Delete Category" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        
                        <TableView fx:id="adminCategoryTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn text="ID" prefWidth="50" />
                              <TableColumn text="Name" prefWidth="200" />
                              <TableColumn text="Description" prefWidth="300" />
                           </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            
            <Tab text="Orders">
               <content>
                  <VBox spacing="10">
                     <children>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                           <children>
                              <Button fx:id="updateOrderStatusBtn" text="Update Order Status" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        
                        <TableView fx:id="adminOrderTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn text="Order ID" prefWidth="80" />
                              <TableColumn text="Customer" prefWidth="150" />
                              <TableColumn text="Date" prefWidth="120" />
                              <TableColumn text="Total" prefWidth="100" />
                              <TableColumn text="Status" prefWidth="100" />
                           </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            
            <Tab text="Inventory">
               <content>
                  <VBox spacing="10">
                     <children>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                           <children>
                              <Button fx:id="updateStockBtn" text="Update Stock" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        
                        <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn text="Product ID" prefWidth="80" />
                              <TableColumn text="Product Name" prefWidth="200" />
                              <TableColumn text="Current Stock" prefWidth="120" />
                              <TableColumn text="Reserved" prefWidth="100" />
                              <TableColumn text="Available" prefWidth="100" />
                           </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      
      <Label fx:id="adminPerfLabel" text="" textFill="GRAY" wrapText="true" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>





