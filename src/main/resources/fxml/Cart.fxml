<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.CartController">
   <children>
      <HBox spacing="15" alignment="CENTER_LEFT" styleClass="nav-bar">
         <children>
            <Button fx:id="backButton" text="â† Back to Shop" styleClass="button-secondary" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Your Shopping Cart" styleClass="label-title" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshButton" text="Refresh" styleClass="button-secondary" />
         </children>
      </HBox>
      
      <Separator />
      
      <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <VBox alignment="CENTER" spacing="24" styleClass="container" maxWidth="1000.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="cartErrorLabel" text="" wrapText="true" styleClass="label-error" visible="false" managed="false" />
                  
                  <StackPane VBox.vgrow="ALWAYS" minHeight="400.0">
                     <children>
                        <ListView fx:id="cartItemsList" />
                        <ProgressIndicator fx:id="loadingIndicator" visible="false" managed="false" />
                     </children>
                  </StackPane>
                  
                  <HBox spacing="20" alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Total Amount:" styleClass="label-subtitle" />
                        <Label fx:id="cartTotalLabel" text="0.00" styleClass="label-success" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="15" alignment="CENTER">
                     <children>
                        <Button fx:id="updateItemButton" text="Update Qty" prefWidth="160" styleClass="button-secondary" />
                        <Button fx:id="removeItemButton" text="Remove" prefWidth="160" styleClass="button-danger" />
                        <Button fx:id="checkoutButton" text="Complete Checkout" prefWidth="200" styleClass="button-primary" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
